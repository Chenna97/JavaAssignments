package com.abs.quest1;

import java.util.Scanner;

public class Manager extends Employee {

	public Manager(String empName, double salary, int empId) {
		super(empName, salary, empId);
		this.empName = empName;
		this.salary = salary;
		this.empId = empId;
		
	}
	

	@Override
	void calcBonus(double amount) {
		
		Scanner sc=new  Scanner(System.in);
		System.out.println("Enter the bounus of employee to calculate :: ");
		double bonus = sc.nextDouble();
		
		amount+= bonus;
		
		System.out.println("Calculate Bonus "+amount);
		
		sc.close();
		
	}

	@Override
	void showProjects() {
		System.out.println("Total Projects are completed by  "+empName + "Within time");
		
	}
	

}
