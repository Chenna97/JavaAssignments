package com.basics.quest3;

import java.util.Scanner;

public class StudentMain {

	public static void main(String[] args) {
	
		
		Scanner sc= new Scanner(System.in);
		
		System.out.println("Enter the details of Studen1: ");
		System.out.println("Name :");
		String sname =  sc.next();
		
		System.out.println("Department :");
		String Sdepartment =  sc.next();
		
		System.out.println("Enter the details of Studen2 : ");
		System.out.println("Name :");
		String sname2 =  sc.next();
		
		System.out.println("Department :");
		String sdepartment2 =  sc.next();
		
		  System.out.print("Enter number of subjects: ");
          int numSubjects = sc.nextInt();

          int[] marks = new int[numSubjects];
          System.out.println("Enter marks for " + numSubjects + " subjects:");
          for (int j = 0; j < numSubjects; j++) {
              System.out.print("Mark " + (j + 1) + ": ");
              marks[j] = sc.nextInt();
          }
          
          Student student = new Student(sname, Sdepartment);
          student.printDetails();
          Student student2 = new Student(sname2, sdepartment2);
          student2.printDetails();
          String grade = student.getGrades(marks);
          System.out.println("Grade: " + grade);
          String grad = student2.getGrades(marks);
          System.out.println("Grade: " + grad);
          
          sc.close();
		
	}
	
	

}
