package com.basics.quest5;

public class MobileMain {

	public static void main(String[] args) {
		
		
		Mobile mobile1 = new Mobile("Note 7 pro ","Redmi","Green",29000); 
        Mobile mobile2 = new Mobile("iPhone 13", "Apple","Black", 70000);
        Mobile mobile3 = new Mobile("Redmi Note 10", "Xiaomi","Golden yellow", 15000);
        Mobile mobile4 = new Mobile("Galaxy A52", "Samsung","Silver", 22000);
        Mobile mobile5 = new Mobile("OnePlus 9", "OnePlus","yellow", 45000);

        Mobile[] mobileArray = new Mobile[5];
        mobileArray[0] = mobile1;
        mobileArray[1] = mobile2;
        mobileArray[2] = mobile3;
        mobileArray[3] = mobile4;
        mobileArray[4] = mobile5;
        
        System.out.println("All Mobile Details:");
        for (Mobile mobile : mobileArray) {
            mobile.getDetails();
        }

        
        System.out.println("\nSamsung Mobiles:");
        for (Mobile mobile : mobileArray) {
            if (mobile.brand.equalsIgnoreCase("Samsung")) {
                mobile.getDetails();
            }
        }
        
        
        
        
	}

}
